<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <%= form_errors(@article) %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Create article' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
